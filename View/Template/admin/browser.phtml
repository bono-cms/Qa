<form>
	<div class="table-responsive">
        <?= $this->widget(new GridWidget($pairs, array(
            'batch' => true,
            'pk' => 'id',
            'tableClass' => 'table table-hover table-bordered table-striped table-condensed',
            'columns' => array(
                array(
                    'column' => 'id',
                    'label' => '#'
                ),

                array(
                    'column' => 'question'
                ),

                array(
                    'column' => 'questioner'
                ),
                
                array(
                    'column' => 'answerer'
                ),
                
                array(
                    'column' => 'ip',
                    'label' => 'IP'
                ),

                array(
                    'column' => 'published',
                    'value' => function($qa){
                        return Element::checkbox(sprintf('published[%s]', $qa->getId()), $qa->getPublished());
                    }
                )
            ),

            'actions' => array(
                'edit' => function($qa){
                    return Icon::edit(
                        $this->url('Qa:Admin:Qa@editAction', $qa->getId()),
